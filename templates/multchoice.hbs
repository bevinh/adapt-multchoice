<div class="multchoice-inner component-inner" role="region" aria-label="{{_globals._components._multchoice.ariaRegion}}" {{#if _globals._components._multchoice.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="multchoice-widget component-widget {{#unless _isEnabled}} disabled {{#if _isInteractionComplete}} complete submitted show-user-answer {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        {{#each _items}}
        <div class="multchoice-item component-item component-item-color {{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}}correct{{else}}incorrect{{/if}}{{/if}}{{/unless}} item-{{@index}}">
            <input type="checkbox" id="{{../_id}}-{{@index}}" aria-labelledby="{{../_id}}-{{@index}}-aria"{{#unless ../_isEnabled}} disabled{{/unless}} aria-label="{{a11y_normalize text}}"/>
            <label aria-hidden="true" id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" class="component-item-text-color component-item-border{{#unless ../_isEnabled}} disabled {{/unless}}{{#if _isSelected}} selected{{/if}}">
                <div class="multchoice-item-state">
                    <div class="multchoice-item-icon multchoice-answer-icon {{#if ../_isRadio}}radio{{else}}checkbox{{/if}} component-item-text-color icon"></div>
                    <div class="multchoice-item-icon multchoice-correct-icon icon icon-tick"></div>
                    <div class="multchoice-item-icon multchoice-incorrect-icon icon icon-cross"></div>
                </div>
                <div class="multchoice-item-inner">
                    {{{text}}}
                </div>
            </label>
        </div>
        {{/each}}
    </div>
    <div class="buttons">
    </div>
</div>
